<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/default_dialog_radius"
    android:layout_marginHorizontal="100dp"
    android:paddingVertical="50dp">

    <ImageView
        android:id="@+id/processing_shield_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:src="@drawable/ic_processing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/circular_progress_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:indicatorColor="@color/primary"
        app:indicatorSize="106dp"
        app:layout_constraintBottom_toBottomOf="@id/processing_shield_image"
        app:layout_constraintLeft_toLeftOf="@id/processing_shield_image"
        app:layout_constraintRight_toRightOf="@+id/processing_shield_image"
        app:layout_constraintTop_toTopOf="@id/processing_shield_image"
        app:trackColor="@color/primary"
        app:trackThickness="6dp" />

    <TextView
        android:id="@+id/progressing_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Processing..."
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/circular_progress_indicator"
        app:layout_constraintRight_toRightOf="@id/circular_progress_indicator"
        app:layout_constraintTop_toBottomOf="@id/circular_progress_indicator" />


</androidx.constraintlayout.widget.ConstraintLayout>
